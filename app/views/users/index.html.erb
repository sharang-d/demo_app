<h1>Listing all Users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
  </tr>

  <% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= link_to 'Show', user_path(user) %></td>
  </tr>
  <% end %>
</table>

<%= link_to 'New User', new_user_path %> |
