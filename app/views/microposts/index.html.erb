<% provide(:title, 'Microposts') %>
<h1>Listing all Microposts</h1>

<table>
  <tr>
    <th>content</th>
    <th>User ID</th>
  </tr>

  <% @microposts.each do |micropost| %>
  <tr>
    <td><%= micropost.content %></td>
    <td><%= micropost.user_id %></td>
    <td><%= link_to 'Edit', edit_micropost_path(micropost) %></td>
    <td><%= link_to 'Delete', micropost_path(micropost), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= link_to 'Show', micropost_path(micropost) %></td>
  </tr>
  <% end %>
</table>

<%= link_to 'New micropost', new_micropost_path %> |
